@model MvcBurger.Entities.Siparis

@{
    ViewData["Title"] = "Details";
}

<div class="row justify-content-center align-items-center text-light">
    <div class="col-md-4">


    <h4>Sipariş Detay</h4>
    <hr />
    <table class=" table row">
        <tr>
            <td class="col-sm-5">
                Büyüklük:
            </td>
            <td class="col-sm-10">
                @Html.DisplayFor(model => model.Buyukluk)
            </td>
        </tr>
        <tr>
            <td class="col-sm-5">
                Sipariş Sayısı:
            </td>
            <td class="col-sm-10">
                @Html.DisplayFor(model => model.SiparisSayisi)
            </td>
        </tr>
        <tr>
            <td class="col-sm-5">
                Toplam Fiyat:
            </td>
            <td class="col-sm-10">
                @Html.DisplayFor(model => model.ToplamFiyat)
            </td>
        </tr>
    </table>
        <div>
            <a class="btn btn-danger" asp-action="Update" asp-route-id="@Model?.Id">Güncelle</a> |
            <a class="btn btn-warning" asp-action="Index">Tüm Siparişler</a>
        </div>
    </div>
</div>

