@model MvcBurger.Entities.EkstraMalzeme

@{
    ViewData["Title"] = "Delete";
}

<div class="row justify-content-center align-items-center text-light">
    <div class="col-md-4">
        <h3>Malzemeyi silmek istediğinize emin misiniz?</h3>

        <hr />
        <table class=" table ">
            <tr>
                <td class="col-sm-5">
                    Adı:
                </td>
                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.Adi)
                </td>
            </tr>
            <tr>
                <td class="col-sm-5">
                   Fiyatı:
                </td>
                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.Fiyat)
                </td>
            </tr>           
        </table>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a class="btn btn-warning" asp-action="Index">Tüm Siparişler</a>
    </form>
</div>
