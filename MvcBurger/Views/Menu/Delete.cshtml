@model MvcBurger.Entities.Menu

@{
    ViewData["Title"] = "Delete";
}


<div class="row justify-content-center align-items-center text-light">
    <div class="col-md-6">
    <h2 class="text-danger">Silmek istediğinizden emin misiniz?</h2>
        <h4>Menu</h4>
        <hr />
        <table class=" table row">
            <tr>
                <td class="col-sm-5">
                    Ad:
                </td>
                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.Ad)
                </td>
            </tr>
            <tr>
                <td class="col-sm-5">
                    Fiyat:
                </td>
                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.Fiyat)
                </td>
            </tr>
            <tr>
                <td class="col-sm-5">
                    Resim:
                </td>
                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.ResimAdi)
                </td>
            </tr>

        </table>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a class="btn btn-warning" asp-action="Index">Tüm Siparişler</a>
        </form>
    </div>
    </div>
   
